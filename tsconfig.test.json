{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": ["test/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "coverage"]
}
